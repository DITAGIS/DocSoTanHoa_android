<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--Layout hiển thị thông tin-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@android:color/holo_blue_dark"
        android:minHeight="25px"
        android:minWidth="25px"
        android:orientation="vertical"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Tổng số"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/login_activity_horizontal_margin"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txt_llt_mlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã lộ trình: 56"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_llt_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Danh bộ: 256"
                android:textColor="@android:color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imgbtn_llt_check"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="1.3"
            android:onClick="doCheck"
            android:src="@drawable/checked" />
    </LinearLayout>
    <!--Layout xem danh sách lộ trình-->
    <!--height = 0 dp thì android sẽ lấy theo weight-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mã lộ trình"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Danh bộ"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chọn Mã lộ trình"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

        <GridView
            android:id="@+id/grid_llt_danhSachLoTrinh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:paddingTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:numColumns="1" />
        <!--</ScrollView>-->
    </LinearLayout>
    <!--Layout menu-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_qllt_qllt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:src="@drawable/rider" />

        <ImageButton
            android:id="@+id/btn_qllt_ds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:onClick="doDocSo"
            android:src="@drawable/number_read" />

        <ImageButton
            android:id="@+id/btn_qllt_qlds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"

            android:background="@android:color/background_light"
            android:onClick="doQuanLyDocSo"
            android:src="@drawable/num_list" />
    </LinearLayout>
</LinearLayout>
