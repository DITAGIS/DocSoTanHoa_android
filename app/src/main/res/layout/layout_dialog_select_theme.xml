<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/login_activity_horizontal_margin"
    android:paddingRight="@dimen/login_activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_padding">

    <RadioGroup
        android:id="@+id/radioGroup_select_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_theme_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/UI_Theme_1"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/radio_theme_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/UI_Theme_2"
            android:textSize="18dp" />
    </RadioGroup>
