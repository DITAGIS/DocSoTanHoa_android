<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--Layout hiển thị thông tin-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@android:color/holo_blue_dark"
        android:minHeight="25px"
        android:minWidth="25px"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:minHeight="25px"
            android:minWidth="25px">

            <!--Table row danh bộ-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Danh bộ"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/txt_ds_db"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <ImageButton

                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/prev" />

                <Space android:layout_weight="0.5" />

                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/next" />
            </TableRow>
            <!--Table row tên khách hàng-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Tên khách hàng"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:text="Nguyễn Văn A"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
            <!--Table row mã lộ trình-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Mã lộ trình"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:id="@+id/spin_ds_mlt"
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:text="1029385"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
            <!--Table row địa chỉ-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Địa chỉ"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:text="21A, DUONG 7-KP4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
            <!--Table row giá biểu-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Giá biểu"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:text="15"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
            <!--Table row Định mức-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Định mức"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:text="28"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
            <!--Table row chỉ số cũ-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Chỉ số cũ"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:text="5990"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
            <!--Table row tiền nước-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Tiền nước"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:text="0 VNĐ"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <!--Layout nhập chỉ số mới, code-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!--Table row nhập code-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Code"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>
            <!--Table row nhập chỉ số mới-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Chỉ số mới"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text="7001" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/camera" />


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/checked" />
        </LinearLayout>
    </LinearLayout>
    <!--Layout menu-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:onClick="doLayLoTrinh"
            android:src="@drawable/rider" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:src="@drawable/number_read" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:onClick="doQuanLyDocSo"
            android:src="@drawable/num_list" />
    </LinearLayout>
</LinearLayout>
