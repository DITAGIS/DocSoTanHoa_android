                    <!--android:textColor="@android:color/white" />-->
            <!--</TableRow>-->
            <!--&lt;!&ndash;Table row Định mức&ndash;&gt;-->
            <!--<TableRow android:layout_weight="1">-->

                <!--<TextView-->
                    <!--android:layout_column="0"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="Định mức"-->
                    <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                    <!--android:textColor="@android:color/white" />-->

                <!--<TextView-->
                    <!--android:id="@+id/txt_ds_dinhmuc"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_span="4"-->
                    <!--android:layout_weight="1"-->
                    <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                    <!--android:textColor="@android:color/white" />-->
            <!--</TableRow>-->
            <!--Table row tiền nước-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Tiền nước"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_ds_tiennuoc"
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <!--Layout nhập chỉ số mới, code-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"

        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#66CDAA"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <!--Table row nhập code-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Code"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/spin_ds_code"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>
            <!--Table row nhập chỉ số mới-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Chỉ số mới"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText

                    android:id="@+id/etxt_ds_CSM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="number"
                    android:maxLength="5" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageButton
                android:id="@+id/imgBtn_ds_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:onClick="doCamera"
                android:src="@drawable/camera" />


            <ImageButton
                android:id="@+id/imgbtn_ds_Save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/checked" />
        </LinearLayout>
    </LinearLayout>
    <!--Layout menu-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:onClick="doLayLoTrinh"
            android:src="@drawable/rider" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:src="@drawable/number_read" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:onClick="doQuanLyDocSo"
            android:src="@drawable/num_list" />
    </LinearLayout>
</LinearLayout>
