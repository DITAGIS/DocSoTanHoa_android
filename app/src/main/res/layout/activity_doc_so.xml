<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:focusableInTouchMode="true">
        <!--Layout hiển thị thông tin-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@color/colorPrimary"
            android:minHeight="25px"
            android:minWidth="25px"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:minHeight="25px"
                    android:minWidth="25px">
                    <!--Table row hiển thị số danh bộ đã đọc-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Đã hoàn thành:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txt_ds_complete"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/color_row_check" />
                    </TableRow>

                    <!--Table row kỳ-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Kỳ: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txt_ds_ky"
                            android:layout_gravity="center_vertical"
                            android:layout_span="4"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </TableRow>
                    <!--Table row đợt-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Đợt: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txt_ds_dot"
                            android:layout_gravity="center_vertical"
                            android:layout_span="4"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </TableRow>
                    <!--Table row mã lộ trình-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Mã LT: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <Spinner
                            android:id="@+id/spin_ds_mlt"
                            android:layout_gravity="center_vertical"
                            android:layout_span="4"
                            android:layout_weight="1"
                            android:text="1029385"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </TableRow>
                    <!--Table row tìm kiếm danh bộ-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Tìm kiếm"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <AutoCompleteTextView
                            android:id="@+id/editauto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:width="0dp"
                            android:ems="10"
                            android:gravity="left"
                            android:hint="Tìm kiếm danh bộ"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorWhite" />

                    </TableRow>

                    <!--Table row danh bộ-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Danh bộ: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <Spinner
                            android:id="@+id/spin_ds_db"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <ImageButton
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:background="@color/colorPrimary"
                            android:onClick="doPrev"
                            android:src="@drawable/prev" />

                        <Space android:layout_weight="0.5" />

                        <ImageButton
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:background="@color/colorPrimary"
                            android:onClick="doNext"
                            android:src="@drawable/next" />
                    </TableRow>
                    <!--Table row tên khách hàng-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Tên KH: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txt_ds_tenKH"
                            android:layout_gravity="center_vertical"
                            android:layout_span="4"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </TableRow>

                    <!--Table row địa chỉ-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Địa chỉ: "

                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txt_ds_diachi"
                            android:layout_gravity="center_vertical"
                            android:layout_span="4"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </TableRow>
                    <!--Table row nhập sđt-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="SĐT: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <EditText
                            android:id="@+id/etxt_ds_sdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:width="0dp"
                            android:ems="10"
                            android:gravity="left"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/colorWhite" />
                    </TableRow>
                    <!--Table row chỉ số cũ-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="CS cũ: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txt_ds_CSC"
                            android:layout_gravity="center_vertical"
                            android:layout_span="4"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </TableRow>
                    <!--Table row chỉ số mới-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="CS mới: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txt_ds_CSM"
                            android:layout_gravity="center_vertical"
                            android:layout_span="4"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </TableRow>

                    <!--Table row giá biểu-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Giá biểu"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txt_ds_giabieu"
                            android:layout_gravity="center_vertical"
                            android:layout_span="4"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </TableRow>

                    <!--Table row tiền nước-->
                    <TableRow android:layout_weight="1">

                        <TextView
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Tiền nước"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/txt_ds_tiennuoc"
                            android:layout_gravity="center_vertical"
                            android:layout_span="4"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </TableRow>
                </TableLayout>

                <ImageButton
                    android:id="@+id/imgBtn_ds_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_weight="1"
                    android:onClick="doCamera"
                    android:src="@drawable/camera" />
            </FrameLayout>
        </LinearLayout>
        <!--Layout nhập chỉ số mới, code-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#66CDAA"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <!--Table row nhập code-->
                <TableRow android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Code"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorWhite" />

                    <Spinner
                        android:id="@+id/spin_ds_code"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>
                <!--Table row nhập chỉ số mới-->
                <TableRow android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Chỉ số mới"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorWhite" />

                    <EditText

                        android:id="@+id/etxt_ds_CSM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:ems="10"
                        android:gravity="right"
                        android:inputType="number"
                        android:maxLength="5" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <ImageButton
                    android:id="@+id/imgBtn_ds_scan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="doScan"
                    android:src="@drawable/barcode" />

                <ImageButton
                    android:id="@+id/etxt_ds_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="doNote"
                    android:src="@drawable/note" />


                <ImageButton
                    android:id="@+id/imgbtn_ds_Save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/checked" />
            </LinearLayout>
        </LinearLayout>
        <!--Layout menu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="doLayLoTrinh"
                    android:background="@android:color/background_light"
                    android:src="@drawable/rider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="Lấy lộ trình"
                    android:textSize="20dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark"
                    android:src="@drawable/number_read" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="Đọc số"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/background_light">

                <ImageButton
                    android:id="@+id/btn_qllt_qlds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:background="@android:color/background_light"
                    android:onClick="doQuanLyDocSo"
                    android:src="@drawable/num_list" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="Quản lý đọc số"
                    android:textSize="20dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>