<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--Layout hiển thị thông tin-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@android:color/holo_blue_dark"
        android:minHeight="25px"
        android:minWidth="25px"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:minHeight="25px"
            android:minWidth="25px">
            <!--Table row mã lộ trình-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Mã LT: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:id="@+id/spin_ds_mlt"
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:text="1029385"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
            <!--Table row danh bộ-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Danh bộ: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:id="@+id/spin_ds_db"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:onClick="doPrev"
                    android:src="@drawable/prev" />

                <Space android:layout_weight="0.5" />

                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:onClick="doNext"
                    android:src="@drawable/next" />
            </TableRow>
            <!--Table row tên khách hàng-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Tên KH: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_ds_tenKH"
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>

            <!--Table row địa chỉ-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Địa chỉ: "

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_ds_diachi"
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>

            <!--Table row chỉ số cũ-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="CS cũ: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_ds_CSC"
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>
            <!--Table row chỉ số mới-->
            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="CS mới: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txt_ds_CSM"
                    android:layout_gravity="center_vertical"
                    android:layout_span="4"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </TableRow>

