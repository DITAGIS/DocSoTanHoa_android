<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_select_folder_layout"
    android:layout_width="550dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:orientation="horizontal"
    android:textAppearance="?android:attr/textAppearanceListItemSmall">


    <TextView
        android:id="@+id/row_select_folder_txt_quyen"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:textColor="@color/colorToolBar_Row_1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_select_folder_txt_KH"
        android:layout_width="50dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:textColor="@color/colorToolBar_Row_1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_select_folder_txt_dot"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/colorToolBar_Row_1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_select_folder_txt_ky"
        android:layout_width="50dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:textColor="@color/colorToolBar_Row_1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_select_folder_txt_nam"
        android:layout_width="50dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:textColor="@color/colorToolBar_Row_1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_select_folder_txt_trangthai"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:textColor="@color/colorToolBar_Row_1"
        android:textSize="15sp" />


</LinearLayout>